{
    "$schema": "https://vega.github.io/schema/vega-lite/v3.4.0.json",
    "autosize": {
        "contains": "padding"
    },
    "width": 390,
    "config": {
        "circle": {
            "color": "#0067b1",
            "opacity": 1
        }
    },
    "data": {
        "url": "cbs_faillissementen_per_week.csv"
    },
    "transform": [
        {
            "calculate": "parseInt(datum.week)",
            "as": "weeknr"
        },
        {
            "joinaggregate": [{
                "op": "max",
                "field": "weeknr",
                "as": "laatsteWeek"
            }]
        },
        {
            "filter": {
                "and": [
                    "datum.weeknr > datum.laatsteWeek - 26"
                ]
            }
        }
    ],
    "selection": {
        "highlight": {
            "type": "single",
            "encodings": [
                "y"
            ],
            "on": "mouseover",
            "empty": "none",
            "init": {"y": "Flevoland"}
        }
    },
    "mark": "circle",
    "encoding": {
        "size": {
            "type": "quantitative",
            "field": "aantal",
            "legend": null
                 },
        "tooltip": [
            {
                "type": "nominal",
                "field": "provincie"
            },
            {
                "type": "nominal",
                "field": "week"
            },
            {
                "type": "quantitative",
                "field": "aantal"
            }
        ],
        "x": {
            "type": "nominal",
            "field": "week",
            "sort": [ "1", "2", "3", "4", "5", "6", "7", "8", "9" ],
            "axis": {
                "labelFont": "sans-serif",
                "labelFontSize": 10,
                "labelAngle": 0,
                "labelColor": "gray",
                "title": "weeknr",
                "titleFont": "sans-serif",
                "titleFontSize": 12,
                "titleFontWeight": "normal"
            }
        },
        "y": {
            "type": "nominal",
            "field": "provincie",
            "sort": [
                "Groningen",
                "Friesland",
                "Drenthe",
                "Overijssel",
                "Flevoland",
                "Gelderland",
                "Utrecht",
                "Noord-Holland",
                "Zuid-Holland",
                "Zeeland",
                "Noord-Brabant",
                "Limburg"
            ],
            "axis": {
                "labelFont": "sans-serif",
                "title": null,
                "labelFontSize": 10,
                "labelAlign": "left",
                "labelPadding": 75
            } 
        },
        "color": {
             "condition": {
                "selection": "highlight",
                "value": "rgb(158, 25, 129)"
            }
        }
    }
}