{
    "$schema": "https://vega.github.io/schema/vega-lite/v3.4.0.json",
    "autosize": {
        "contains": "padding"
    },
    "config": {
        "circle": {
            "color": "rgb(0, 103, 177)"
        } 
    },
    "data": {
        "url": "cbs_faillissementen_per_week.csv"
    },
    "selection": {
        "highlight": {
            "type": "single",
            "encodings": [
                "y"
            ],
            "on": "mouseover",
            "empty": "none",
            "init": {"y": "Flevoland"}
        }
    },
    "mark": "circle",
    "encoding": {
        "size": {
            "type": "quantitative",
            "field": "aantal",
            "legend": {
                "titleFont": "sans-serif",
                "titleFontSize": 12,
                "titleFontWeight": "normal",
                "titleColor": "gray",
                "labelFont": "sans-serif",
                "labelFontSize": 12,
                "labelColor": "gray"
            }
        },
        "tooltip": [
            {
                "type": "nominal",
                "field": "provincie"
            },
            {
                "type": "nominal",
                "field": "week"
            },
            {
                "type": "quantitative",
                "field": "aantal"
            }
        ],
        "x": {
            "type": "nominal",
            "field": "week",
            "sort": [ "1", "2", "3", "4", "5", "6", "7", "8", "9" ],
            "axis": {
                "labelFont": "sans-serif",
                "labelFontSize": 12,
                "labelAngle": 0,
                "labelColor": "gray",
                "title": "weeknr",
                "titleFont": "sans-serif",
                "titleFontSize": 12,
                "titleFontWeight": "normal"
            }
        },
        "y": {
            "type": "nominal",
            "field": "provincie",
            "sort": [
                "Groningen",
                "Friesland",
                "Drenthe",
                "Overijssel",
                "Flevoland",
                "Gelderland",
                "Utrecht",
                "Noord-Holland",
                "Zuid-Holland",
                "Zeeland",
                "Noord-Brabant",
                "Limburg"
            ],
            "axis": {
                "labelFont": "sans-serif",
                "title": null,
                "labelFontSize": 12,
                "labelAlign": "left",
                "labelPadding": 90
            } 
        },
        "color": {
             "condition": {
                "selection": "highlight",
                "value": "rgb(158, 25, 129)"
            }
        }
    }
}